                                    Width="30">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/PhanQuyen;component/Images/rotate.png" Width="20" Height="20"></Image>
                            </StackPanel>
                        </Button>
                        <Button Background="AliceBlue" Click="btnZoomIn_Click"

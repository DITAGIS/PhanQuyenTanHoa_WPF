<UserControl x:Class="PhanQuyen.UC_DieuChinhThongTinDocSo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:viewModel="clr-namespace:ViewModel;assembly=ViewModel"
            xmlns:convert="clr-namespace:PhanQuyen"
             mc:Ignorable="d" 
            FontFamily="TimeNewRoman"
             Width="1400" Height="700"
        >
    <UserControl.DataContext>
        <viewModel:HoaDonViewModel>

        </viewModel:HoaDonViewModel>
    </UserControl.DataContext>
    <UserControl.Resources>
        <convert:ByteArrayImageConverter x:Key="ImageConvert"></convert:ByteArrayImageConverter>
        <Style TargetType="{x:Type TextBox}" x:Key="styleTxtb">
            <Style.Triggers>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsFocused" Value="True"></Condition>
                    </MultiTrigger.Conditions>
                    <MultiTrigger.Setters>
                        <Setter Property="FontSize" Value="20"></Setter>
                    </MultiTrigger.Setters>
                </MultiTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <DockPanel LastChildFill="True" Background="White">
        <!--<StackPanel DockPanel.Dock="Top" Orientation="Horizontal"  Background="WhiteSmoke" >-->
        <!--<TextBlock DockPanel.Dock="Top" HorizontalAlignment="Right" FontSize="15" Margin="0,0,10,0" Text="{Binding Status, Mode=OneWay}" VerticalAlignment="Center"/>-->
        <!--</StackPanel>-->
        <!--<StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem Margin="10,0,0,0">

                <TextBlock FontSize="15" Text="{Binding Status, Mode=OneWay}"
                               Margin="10,0"
                           VerticalAlignment="Center"  HorizontalAlignment="Left" />

            </StatusBarItem>
        </StatusBar>-->
        <ScrollViewer Name="scrollMain">
            <Grid Margin="5">
                <Grid.Resources>
                    <Style TargetType="{x:Type TextBlock}" x:Key="styleTxbl">
                        <Style.Triggers>
                            <EventTrigger RoutedEvent="UIElement.MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Duration="0:0:0.300" Storyboard.TargetProperty="FontSize" To="20"></DoubleAnimation>

                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="UIElement.MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Duration="0:0:0.300" Storyboard.TargetProperty="FontSize" To="13"></DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Style.Triggers>
                    </Style>

                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto" ></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Row="0" VerticalAlignment="Center" Orientation="Horizontal"  Name="stpCondition"  >
                    <TextBlock  VerticalAlignment="Center" FontSize="13" Margin="0,0,10,0"><Run Text="Năm:"/></TextBlock>
                    <ComboBox x:Name="cbbYear" SelectedIndex="0" IsEditable="True" VerticalAlignment="Center" Width="50"
                      SelectedValue="{Binding Year, Mode=TwoWay}" 
                              
                      ItemsSource="{Binding ListYear, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" SelectionChanged="cbbYear_SelectionChanged"
                              KeyDown="cbbYear_KeyDown">

                    </ComboBox>

                    <TextBlock VerticalAlignment="Center" FontSize="13" Margin="10,0,10,0"><Run Text="Kỳ:"/></TextBlock>
                    <ComboBox x:Name="cbbMonth" SelectedIndex="0" IsEditable="True" VerticalAlignment="Center" Width="45"
                      SelectedValue="{Binding Month, Mode=TwoWay}" 
                              
                      ItemsSource="{Binding ListMonth, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" SelectionChanged="cbbMonth_SelectionChanged" 
                              KeyDown="cbbMonth_KeyDown"/>
                    <TextBlock VerticalAlignment="Center" FontSize="13" Margin="10,0,10,0"><Run Text="Đợt:"/></TextBlock>
                    <ComboBox x:Name="cbbDate" SelectedIndex="0" IsEditable="True"  VerticalAlignment="Center" Width="45"
                      SelectedValue="{Binding Date, Mode=OneWay}" 
                              
                      ItemsSource="{Binding ListDate, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" SelectionChanged="cbbDate_SelectionChanged"
                              KeyDown="cbbDate_KeyDown"/>
                    <TextBlock VerticalAlignment="Center" FontSize="13" Margin="10,0,10,0"><Run Text="Tổ:"/></TextBlock>
                    <ComboBox x:Name="cbbGroup" SelectedIndex="-1" IsEditable="True"  VerticalAlignment="Center" Width="Auto"
                          SelectedValue="{Binding Group, Mode=OneWay}" 
                              
                      ItemsSource="{Binding ListGroup, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" SelectionChanged="cbbGroup_SelectionChanged"
                              KeyDown="cbbGroup_KeyDown"/>
                    <TextBlock VerticalAlignment="Center" FontSize="13" Margin="10,0,10,0"><Run Text="Máy:"/></TextBlock>
                    <ComboBox x:Name="cbbMachine" SelectedIndex="-1" IsEditable="True" VerticalAlignment="Center" Width="45" SelectionChanged="cbbMachine_SelectionChanged"
                      SelectedValue="{Binding Machine, Mode=OneWay}" 
                      ItemsSource="{Binding ListMachine, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                              KeyDown="cbbMachine_KeyDown"/>
                    <Button Margin="10,0,0,0" Background="White" Name="btnGetData" 
                        Click="btnGetData_Click"
                            >
                        <!--Command="{Binding UpdateCommand}" CommandParameter="{Binding Children, ElementName=stpCondition}">-->
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/PhanQuyen;component/Images/download(2).png" Width="20" Height="20"></Image>
                            <TextBlock  VerticalAlignment="Center" Margin="2,0,0,0" >Lấy dữ liệu</TextBlock>
                        </StackPanel>
                    </Button>

                    <TextBlock VerticalAlignment="Center" FontSize="13" Margin="10,0,10,0"><Run Text="Danh bạ:"/></TextBlock>

                    <!--Danh bạ-->
                    <TextBox  FontSize="15" Height="30" Width="100" VerticalAlignment="Center" VerticalContentAlignment="Center" x:Name="txtbDanhBa" 
                      Text="{Binding SelectedHoaDon.DanhBa}"
                      Style="{StaticResource styleTxtb}"
                              KeyDown="txtbDanhBa_KeyDown"/>
                    <TextBlock VerticalAlignment="Center" FontSize="13" Margin="10,0,10,0"><Run Text="Code:"/></TextBlock>

                    <!--Chọn code-->
                    <ComboBox x:Name="cbbCode" SelectedIndex="0" IsEditable="True" VerticalAlignment="Center" Width="70" 
                              SelectionChanged="cbbCode_SelectionChanged"
                      ItemsSource="{Binding ListCode, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <Button Margin="10,0,0,0" Background="White" Name="btnUpdate" 
                            Click="btnUpdate_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/PhanQuyen;component/Images/up-arrow.png" Width="20" Height="20"></Image>
                            <TextBlock  VerticalAlignment="Center" Margin="2,0,0,0" >Cập nhật</TextBlock>
                        </StackPanel>
                    </Button>
                    <Button Margin="10,0,0,0" Background="White" Name="btnPrint" IsEnabled="False"
                            Click="btnPrint_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/PhanQuyen;component/Images/printer.png" Width="20" Height="20"></Image>
                            <TextBlock VerticalAlignment="Center" Margin="2,0,0,0">In phiếu kiểm tra</TextBlock>
                        </StackPanel>
                    </Button>
                    <Button Margin="10,0,0,0" Background="White" Name="btnViewNote"
                            IsEnabled="False"
                            Click="btnViewNote_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/PhanQuyen;component/Images/note.png" Width="20" Height="20"></Image>
                            <TextBlock VerticalAlignment="Center" Margin="2,0,0,0">Xem ghi chú</TextBlock>
                        </StackPanel>
                    </Button>
                    <Button Margin="10,0,0,0" Background="White" Name="btnViewNoteOld">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/PhanQuyen;component/Images/note_old.png" Width="20" Height="20"></Image>
                            <TextBlock VerticalAlignment="Center" Margin="2,0,0,0">Xem ghi chú cũ</TextBlock>
                        </StackPanel>
                    </Button>
                    <CheckBox Name="chkFilterNote" VerticalAlignment="Center">Lọc ghi chú</CheckBox>
                </StackPanel>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition ></RowDefinition>

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition ></ColumnDefinition>
                        <ColumnDefinition ></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Row="0"
                                Grid.Column="0"
                                Orientation="Horizontal" 
                        Margin="0,9.6,0.2,0" Height="30" VerticalAlignment="Top">
                        <TextBlock VerticalAlignment="Center" FontSize="13" Margin="0,0,10,0"><Run Text="KHĐS:"/></TextBlock>
                        <ComboBox x:Name="cbbKHDS" SelectedIndex="0" IsEditable="True"
                                  
                                  SelectionChanged="cbbKHDS_SelectionChanged"/>

                        <!--Code mới-->
                        <TextBlock VerticalAlignment="Center" FontSize="13" Margin="10,0,10,0"><Run Text="Code:"/></TextBlock>
                        <TextBox  FontSize="15" Height="30" Width="40" VerticalAlignment="Center" VerticalContentAlignment="Center" x:Name="txtbCode" IsEnabled="False"
                      Text="{Binding SelectedHoaDon.CodeMoi}"/>

                        <!--Chỉ số cũ-->
                        <TextBlock VerticalAlignment="Center" FontSize="13" Margin="10,0,10,0"><Run Text="CS cũ:"/></TextBlock>
                        <TextBox  FontSize="15" Height="30" Width="60" VerticalAlignment="Center" VerticalContentAlignment="Center" x:Name="txtbCSC" IsEnabled="False"
                      Text="{Binding SelectedHoaDon.CSCu}"/>

                        <!--Chỉ số mới-->
                        <TextBlock VerticalAlignment="Center" FontSize="13" Margin="10,0,10,0"><Run Text="CS mới:"/></TextBlock>
                        <TextBox  FontSize="15" Height="30" Width="60" VerticalAlignment="Center" VerticalContentAlignment="Center" x:Name="txtbCSM" IsEnabled="True"
                                  TextChanged="txtbCSM_TextChanged"
                                  
                                  
                      Text="{Binding SelectedHoaDon.CSMoi, Mode=TwoWay}" 
                                  KeyDown="txtbCSM_KeyDown"/>

                        <!--Tiêu thụ-->
                        <TextBlock VerticalAlignment="Center" FontSize="13" Margin="10,0,10,0"><Run Text="Tiêu thụ:"/></TextBlock>
                        <TextBox  FontSize="15" Height="30" Width="60" VerticalAlignment="Center" VerticalContentAlignment="Center" x:Name="txtbTieuThu" IsEnabled="False"
                      Text="{Binding SelectedHoaDon.TieuThuMoi, Mode=TwoWay}"/>
                    </StackPanel>
                    <StackPanel 
                        Grid.Row="0" Grid.Column="1"
                        Orientation="Horizontal">
                        <!--Ghi chú đọc số-->
                        <TextBlock VerticalAlignment="Center" FontSize="13" Margin="10,0,10,0"><Run Text="Ghi chú ĐS:"/></TextBlock>
                        <TextBox  FontSize="15" Height="30" Width="200" VerticalAlignment="Center" VerticalContentAlignment="Center" x:Name="txtbGCDS"
                                  KeyDown="txtbGCDS_KeyDown"
                      Text="{Binding SelectedHoaDon.GhiChuDS, Mode=TwoWay}"/>
                        <!--Ghi chú đọc số-->
                        <TextBlock VerticalAlignment="Center" FontSize="13" Margin="10,0,10,0"><Run Text="Ghi chú KH:"/></TextBlock>
                        <TextBox  FontSize="15" Height="30" Width="200" VerticalAlignment="Center" VerticalContentAlignment="Center"
                              x:Name="txtbGCKH"
                            
                      Text="{Binding SelectedHoaDon.GhiChuKH, Mode=TwoWay}" Margin="0,5"/>

                    </StackPanel>
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,10,0,0" Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center" FontSize="13" Margin="10,0,10,0"
                                   Name="txtbTongKH"      FontWeight="Bold"
                                   Text="{Binding TongKH}"><Run Text="Tổng số KH:"/></TextBlock>
                        <TextBlock VerticalAlignment="Center" FontSize="13" Margin="100,0,10,0"
                                   FontWeight="Bold"
                                   Name="txtbSanLuong"
                                   Text="{Binding TongSanLuong}"><Run Text="Sản lượng:"/></TextBlock>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Grid.Column="1"
                                Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center" FontSize="13" Margin="10,0,10,0"><Run Text="Ghi chú MH:"/></TextBlock>
                        <TextBox  FontSize="15" Height="30" Width="200" VerticalAlignment="Center" VerticalContentAlignment="Center"
                              x:Name="txtbGCMH"
                      Text="{Binding SelectedHoaDon.GhiChuTV, Mode=TwoWay}"/>
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="2" Height="250" ShowGridLines="False" Background="White"
                  Margin="0,10,0,0"                  >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" MinWidth="1000"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <!--<GridSplitter Background="White" Grid.Column="0" Grid.RowSpan="5" Width="10"  HorizontalAlignment="Right" VerticalAlignment="Stretch" ></GridSplitter>-->

                    <DataGrid                        Grid.Column="0"
                        SelectedItem="{Binding SelectedHoaDon, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                          AutoGenerateColumns="False" Name="dtgridMain" 
                                                     
                          HorizontalAlignment="Center" VerticalAlignment="Top" 
                          Width="Auto" Margin="-2,0,2.2,-0.4" Height="250" 
                              SelectionChanged="dtgridMain_SelectionChanged"
                        MaxWidth="1200"
                          RowHeight="20"
                          AlternatingRowBackground="Beige"
                          RowBackground="White"
                          GridLinesVisibility="All"
                          HorizontalScrollBarVisibility="Auto"
                          BorderThickness="1"
                              ColumnWidth="100"
                          BorderBrush="Black"
                              CanUserAddRows="False"
                          Background="White" SelectionMode="Single"
                          
                          FontSize="12">
                        <!--Font Color / Style of Column Heading-->
                        <DataGrid.Resources>
                            <Style  TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="Background" Value="SkyBlue"></Setter>
                                <Setter Property="FontSize" Value="14"></Setter>
                                <Setter Property="FontWeight" Value="SemiBold"></Setter>
                                <Setter Property="BorderThickness" Value="2,2,2,2"></Setter>
                                <Setter Property="BorderBrush" Value="Black"></Setter>
                                <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                                <EventSetter Event="Click" Handler="columnHeader_Click" />
                            </Style>

                        </DataGrid.Resources>
                        <DataGrid.RowStyle>
                            <Style TargetType="{x:Type DataGridRow}">
                                <Setter Property="FontSize"  Value="13" />
                                <!--<Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="FontSize"  Value="20" />
                                    </Trigger>
                                </Style.Triggers>-->
                            </Style>
                        </DataGrid.RowStyle>
                        <!--Header column-->
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="MLT" Binding="{Binding MLT1, Mode=OneWay}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Danh bạ"  Binding="{Binding DanhBa, Mode=OneWay}"></DataGridTextColumn>
                            <DataGridTextColumn Header="TTDHN Cũ"  Binding="{Binding TTDHNCu,Mode=OneWay}"></DataGridTextColumn>
                            <DataGridTextColumn Header="TTDHN Mới"  Binding="{Binding TTDHNMoi,Mode=OneWay}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Code Cũ" Binding="{Binding CodeCu,Mode=OneWay}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Code Mới" Binding="{Binding CodeMoi,Mode=OneWay}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Chỉ Số Cũ" Binding="{Binding CSCu,Mode=OneWay}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Chỉ Số Mới"  Binding="{Binding CSMoi,Mode=OneWay}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Tiêu Thụ Mới" Binding="{Binding TieuThuMoi,Mode=OneWay}"></DataGridTextColumn>
                            <DataGridTextColumn Header="TBTT" Binding="{Binding TBTT,Mode=OneWay}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Địa chỉ"  >
                                <DataGridTextColumn.Binding>
                                    <MultiBinding StringFormat="{}{0} {1}">
                                        <Binding Path="SoNhaCu" />
                                        <Binding Path="Duong" />
                                    </MultiBinding>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Đường"  Binding="{Binding Duong,Mode=OneWay}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Ghi chú đọc số" Binding="{Binding GhiChuDS,Mode=OneWay}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Ghi chú khách hàng" Binding="{Binding GhiChuKH,Mode=OneWay}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Ghi chú thương vụ" Binding="{Binding GhiChuTV,Mode=OneWay}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Thông báo" Binding="{Binding GhiChuTV,Mode=OneWay}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Máy đọc số" Binding="{Binding May,Mode=OneWay}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Giờ ghi" Binding="{Binding GIOGHI,Mode=OneWay}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Ngày gắn" Binding="{Binding GhiChuTV,Mode=OneWay}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Tạm tính" Binding="{Binding TamTinh,Mode=OneWay}"
                                                ></DataGridTextColumn>
                            <DataGridTextColumn Header="Sta Cập nhật" Binding="{Binding StaCapNhat,Mode=OneWay}"
                                                ></DataGridTextColumn>
                        </DataGrid.Columns>

                        <!--handle item click event-->

                    </DataGrid>
                    <Grid Grid.Column="1" Name="stkImage" Margin="10,0,10,0">

                        <Border BorderThickness="1" Grid.Column="1" Background="White" Name="border"
                                 ClipToBounds="True"
                                  Height="Auto"
                                   Width="Auto" MouseUp="border_MouseUp"
                                >
                            <Image Name="image" 
                                   Height="Auto"
                                   Width="Auto"
                                   Source="{Binding Path=Image, 
                        Converter={StaticResource ResourceKey=ImageConvert}}" Stretch="UniformToFill"  
                                 >

                            </Image>
                        </Border>

           

                    </Grid>
                    <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" Text="Chưa có hình ảnh">
                        <TextBlock.Style>
                            <Style>
                                <Setter Property="TextBlock.Visibility" Value="Hidden" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasImage}" Value="false">
                                        <Setter Property="TextBlock.Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                
                </Grid>

                <!--Grid số lệnh-->
                <Border  Grid.Row="3"
                          Grid.Column="0"
                         BorderBrush="Black" 
                         BorderThickness="1"
                         Margin="0,10,0,10"
                            Background="WhiteSmoke">
                    <Grid  Width="Auto"                >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Border  Grid.Row="0"
                          Grid.Column="0"
                         BorderBrush="Gray" 
                         BorderThickness="1,1,1,0">
                            <TextBlock HorizontalAlignment="Center" 
                        FontWeight="Bold"
                        Text="Số lệnh"/>
                        </Border>
                        <Border Grid.Row="1"
                          Grid.Column="0"
                        BorderBrush="Gray" 
                        BorderThickness="1">
                            <TextBlock HorizontalAlignment="Center" 
                         Text="{Binding SoLenhBinding.SoLenh}"/>
                        </Border>
                        <Border  Grid.Row="0"
                          Grid.Column="1"
                         BorderBrush="Gray" 
                         BorderThickness="1,1,1,0">
                            <TextBlock HorizontalAlignment="Center" 
                        FontWeight="Bold"
                        Text="Loại phiếu"/>
                        </Border>
                        <Border Grid.Row="1"
                          Grid.Column="1"
                        BorderBrush="Gray" 
                        BorderThickness="1">
                            <TextBlock HorizontalAlignment="Center" 
                        Text="{Binding SoLenhBinding.LoaiPhieu}"/>
                        </Border>
                        <Border  Grid.Row="0"
                          Grid.Column="2"
                         BorderBrush="Gray" 
                         BorderThickness="1,1,1,0">
                            <TextBlock HorizontalAlignment="Center" 
                        FontWeight="Bold"
                        Text="Chỉ số đóng/mở"/>
                        </Border>
                        <Border Grid.Row="1"
                          Grid.Column="2"
                        BorderBrush="Gray" 
                        BorderThickness="1">
                            <TextBlock HorizontalAlignment="Center" 
                        Text="{Binding SoLenhBinding.CSDongMo}"/>
                        </Border>
                        <Border  Grid.Row="0"
                          Grid.Column="3"
                         BorderBrush="Gray" 
                         BorderThickness="1,1,1,0">
                            <TextBlock HorizontalAlignment="Center" 
                        FontWeight="Bold"
                        Text="Ngày thực hiện"/>
                        </Border>
                        <Border Grid.Row="1"
                          Grid.Column="3"
                        BorderBrush="Gray" 
                        BorderThickness="1">
                            <TextBlock HorizontalAlignment="Center" 
                        Text="{Binding SoLenhBinding.NgayThucHien}"/>
                        </Border>
                        <Border  Grid.Row="0"
                          Grid.Column="4"
                         BorderBrush="Gray" 
                         BorderThickness="1,1,1,0">
                            <TextBlock HorizontalAlignment="Center" 
                        FontWeight="Bold"
                        Text="Nội dung"/>
                        </Border>
                        <Border Grid.Row="1"
                          Grid.Column="4"
                        BorderBrush="Gray" 
                        BorderThickness="1">
                            <TextBlock HorizontalAlignment="Center" 
                        Text="{Binding SoLenhBinding.NoiDung}"/>
                        </Border>
                        <Border  Grid.Row="0"
                          Grid.Column="5"
                         BorderBrush="Gray" 
                         BorderThickness="1,1,1,0">
                            <TextBlock HorizontalAlignment="Center" 
                        FontWeight="Bold"
                        Text="Hiệu"/>
                        </Border>
                        <Border Grid.Row="1"
                          Grid.Column="5"
                        BorderBrush="Gray" 
                        BorderThickness="1">
                            <TextBlock HorizontalAlignment="Center" 
                        Text="{Binding SoLenhBinding.Hieu}"/>
                        </Border>
                        <Border  Grid.Row="0"
                          Grid.Column="6"
                         BorderBrush="Gray" 
                         BorderThickness="1,1,1,0">
                            <TextBlock HorizontalAlignment="Center" 
                        FontWeight="Bold"
                        Text="Cỡ"/>
                        </Border>
                        <Border Grid.Row="1"
                          Grid.Column="6"
                        BorderBrush="Gray" 
                        BorderThickness="1">
                            <TextBlock HorizontalAlignment="Center" 
                        Text="{Binding SoLenhBinding.Co}"/>
                        </Border>
                        <Border  Grid.Row="0"
                          Grid.Column="7"
                         BorderBrush="Gray" 
                         BorderThickness="1,1,1,0">
                            <TextBlock HorizontalAlignment="Center" 
                        FontWeight="Bold"
                        Text="Ngày nhập"/>
                        </Border>
                        <Border Grid.Row="1"
                          Grid.Column="7"
                        BorderBrush="Gray" 
                        BorderThickness="1">
                            <TextBlock HorizontalAlignment="Center" 
                        Text="{Binding SoLenhBinding.NgayNhap}"/>
                        </Border>
                    </Grid>
                </Border>
                <Border  Grid.Row="4"
                          Grid.Column="0"
                         BorderBrush="Black" 
                         BorderThickness="1"
                         Margin="0,0,0,10"
                            Background="WhiteSmoke">
                    <!--Grid báo thay-->
                    <Grid Width="Auto">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                            <ColumnDefinition Width="150"></ColumnDefinition>
                            <ColumnDefinition Width="150"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Border  Grid.Row="0"
                          Grid.Column="0"
                         BorderBrush="Gray" 
                         BorderThickness="1,1,1,0">
                            <TextBlock HorizontalAlignment="Center" 
                        FontWeight="Bold"
                        Text="Danh bạ"/>
                        </Border>
                        <Border Grid.Row="1"
                          Grid.Column="0"
                        BorderBrush="Gray" 
                        BorderThickness="1">
                            <TextBlock HorizontalAlignment="Center" 
                         Text="{Binding BaoThayBinding.DanhBa}"/>
                        </Border>
                        <Border  Grid.Row="0"
                          Grid.Column="1"
                         BorderBrush="Gray" 
                         BorderThickness="1,1,1,0">
                            <TextBlock HorizontalAlignment="Center" 
                        FontWeight="Bold"
                        Text="Loại báo thay"/>
                        </Border>
                        <Border Grid.Row="1"
                          Grid.Column="1"
                        BorderBrush="Gray" 
                        BorderThickness="1">
                            <TextBlock HorizontalAlignment="Center" 
                        Text="{Binding BaoThayBinding.LoaiBaoThay}"/>
                        </Border>
                        <Border  Grid.Row="0"
